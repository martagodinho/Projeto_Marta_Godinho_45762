<script>
  // Função para escapar caracteres especiais em HTML
  function escapeHTML(text) {
      var map = {
          '&': '&amp;',
          '<': '&lt;',
          '>': '&gt;',
          '"': '&quot;',
          "'": '&#039;'
      };

      return text.replace(/[&<>"']/g, function(m) { return map[m]; });
  }

  // Escapar elementos da página
  var elements = document.getElementsByTagName('*');
  for (var i = 0; i < elements.length; i++) {
      var element = elements[i];
      if (element.childNodes.length === 1 && element.childNodes[0].nodeType === 3) {
          element.innerHTML = escapeHTML(element.innerHTML);
      }
  }

  // Formatar data de publicação
  const dataPublicacaoElements = document.querySelectorAll('.data-publicacao');
  dataPublicacaoElements.forEach(element => {
      const dataPublicacao = element.textContent.trim();
      const dataFormatada = formatarData(dataPublicacao);
      element.textContent = dataFormatada;
  });
</script>

