    <main>
      <h1 data-translate="nav_noticias">Notícias</h1>
      <div id="noticias-container">
        <% if (noticias && noticias.length > 0) { %>
          <% noticias.forEach(function(noticia) { %>
            <div class="noticia">
              <h2><%= noticia.titulo_noticia %></h2>
              <div class="autor-data">
                <p style="color: #262626;"><%= noticia.entidade %> |</p>
                <p><span class="data-publicacao">Data de Publicação: <%= noticia.data_publicacao %></span></p>
              </div>
              <p style="white-space: pre-line;"><%= noticia.texto_noticia %></p>
              <div class="botoes-container">
                <% if (noticia.link_original) { %>
                  <button class="botao-link" onclick="window.open('<%= noticia.link_original %>', '_blank', 'noopener,noreferrer')">Link Original</button>
                <% } %>
              </div>
              <% if (noticia.imagem) { %>
                <img src="<%= noticia.imagem %>" alt="Imagem da Notícia" class="imagem-noticia">
              <% } %>
            </div>
          <% }); %>
        <% } else { %>
          <p>Nenhuma notícia encontrada.</p>
        <% } %>
    
        <div class="pagination">
          <% if (totalPages > 1) { %>
            <% if (currentPage > 1) { %>
              <a href="/noticias?page=<%= currentPage - 1 %>" class="pagination-button">Anterior</a>
            <% } %>
            <% if (currentPage < totalPages) { %>
              <a href="/noticias?page=<%= currentPage + 1 %>" class="pagination-button">Seguinte</a>
            <% } %>
          <% } %>
        </div>
      </div>
