  .pagination-button {
    padding: 8px 16px;
    background-color: #189fde;
    color: #ffffff;
    text-decoration: none;
    border-radius: 4px;
    margin: 0 4px;
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
  }
  .ensaio-clinico .estado-box {
    padding: 5px;
    border-radius: 5px;
  }
  
  .ensaio-clinico .estado-box.Ativo {
    font-size: 10pt;
    background-color: #90a91b;
    padding-block: 0%;
    color: #fff;
    border-radius: 5px;
    padding-inline: 1%;    
    display: inline-block;
  }
  
  .ensaio-clinico .estado-box.Inativo {
    font-size: 10pt;
    background-color: #d34c16;
    padding-block: 0%;
    color: #fff;
    border-radius: 5px;
    padding-inline: 1%;
    display: inline-block;  
  }
  
    .ensaio-clinico .estado-box.Pausa {
      font-size: 10pt;
      background-color: #e9b606;
      padding-block: 0%;
      color: #fff;
      border-radius: 5px;
      padding-inline: 1%;
      display: inline-block;
    }
    
  
  </style>
