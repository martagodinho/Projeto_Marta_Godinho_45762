		<h1 data-translate="nav_ensaios">Ensaios Clínicos</h1>
    <p data-translate="inscrever">Para participar num ensaio clínico, contacte-nos.</p>
    <div id="ensaio-clinico-container">
      <% ensaiosClinicos.forEach(function(ensaioClinico) { %>
        <div class="ensaio-clinico">
          <h2><%= ensaioClinico.nome_ensaio %></h2>
          <p>Patologia: <%= ensaioClinico.patologia %></p>
          <p style="white-space: pre-line;"><%= ensaioClinico.texto_ensaio %></p>
          <div class="estado-box <%= ensaioClinico.estado %>">
            <p>Estado: <%= ensaioClinico.estado %></p>
          </div>
        </div>
      <% }); %>
    
      <div class="pagination">
        <% if (totalPages > 1) { %>
          <% if (currentPage > 1) { %>
            <a href="/ensaios_clinicos?page=<%= currentPage - 1 %>" class="pagination-button">Anterior</a>
          <% } %>
          <% if (currentPage < totalPages) { %>
            <a href="/ensaios_clinicos?page=<%= currentPage + 1 %>" class="pagination-button">Seguinte</a>
          <% } %>
        <% } %>
      </div>
    </div>
