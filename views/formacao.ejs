  <script>
    const dataInicioElements = document.querySelectorAll('.data-inicio');
    const dataFimElements = document.querySelectorAll('.data-fim');
  
    dataInicioElements.forEach(element => {
      const dataInicio = element.textContent.trim();
      const dataFormatadaInicio = formatarData(dataInicio);
      element.textContent = 'Data de Início: ' + dataFormatadaInicio;
    });
  
    dataFimElements.forEach(element => {
      const dataFim = element.textContent.trim();
