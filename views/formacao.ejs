	<main>
		<h1 data-translate="nav_formacao">Formação</h1>
		<div id="formacao-container">
      <% if (formacoes && formacoes.length > 0) { %>
        <% formacoes.forEach(function(formacao) { %>
          <div class="formacao">
            <h2><%= formacao.nome_formacao %></h2>
            <div class="autor-data">
              <p style="color: #262626;"><%= formacao.area_formacao %> |</p>
              <p><span class="data-publicacao">Máximo de Inscrições: <%= formacao.max_inscricoes %> |</span></p>
              <p><span class="data-publicacao">Duração: <%= formacao.duracao %> horas</span></p> <br>
            </div>
            <div class="datas">
            <p class="data-inicio"><%= formacao.data_inicio %> </p> <p>|</p>
            <p class="data-fim"><%= formacao.data_fim %></p>
          </div>
            <p style="white-space: pre-line;"><%= formacao.texto_explicativo %></p>
    
            <button class="botao-inscricao" onclick="window.location.href='<%= formacao.link_insc %>'">Inscrição</button>
          </div>
        <% }); %>
      <% } else { %>
        <p>Nenhuma formação encontrada.</p>
      <% } %>
    
      <div class="pagination">
        <% if (totalPages > 1) { %>
          <% if (currentPage > 1) { %>
            <a href="/formacao?page=<%= currentPage - 1 %>" class="pagination-button">Anterior</a>
          <% } %>
          <% if (currentPage < totalPages) { %>
            <a href="/formacao?page=<%= currentPage + 1 %>" class="pagination-button">Seguinte</a>
          <% } %>
        <% } %>
      </div>
    </div>
    
		
	</main>
	
