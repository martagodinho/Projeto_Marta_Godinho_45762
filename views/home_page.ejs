      <% if (blogs && blogs.length > 0) { %>
        <% blogs.forEach(function(blog) { %>
          <div class="blog">
            <h3 class="titulos_blog" style="color: #333333; font-size: 18px"><%= blog.titulo %></h3>
            <div class="autor-data">
